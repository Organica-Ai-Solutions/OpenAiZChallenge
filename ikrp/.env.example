# Research Platform Settings
RESEARCH_DATA_PATH=/data/research
MAX_CONCURRENT_AGENTS=5

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,https://research.ikrp.org
