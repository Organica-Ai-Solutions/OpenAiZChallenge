# Application Configuration
APP_NAME=Indigenous Knowledge Research Platform
APP_VERSION=0.1.0
DEBUG=false

# Authentication Settings
JWT_SECRET_KEY=your_very_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/ikrp_db

# Redis Configuration
